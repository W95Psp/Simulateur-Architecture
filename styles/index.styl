mainColor = #7f8c8d
body
	margin 0px
	padding 0px
	background-color #ecf0f1

	-webkit-user-select none
	user-select none
	cursor default

	font-family 'Roboto'
	font-weight 300
	
	#header
		background-color mainColor
		color white
		text-align center
		height 82px
		font-size 38px
		padding-top 38px
		position relative

		span
			opacity 0.2
			position absolute
			right 10px
			top 10px
			padding 6px
			font-size 12px
			text-align right
			color #EEE
			background-color #444
			border-radius 4px
			&:hover
				transition 100ms opacity ease-out
				opacity 0.6
			a
				color #EEE
	#content
		margin auto
		width 300px
		text-align center
	.button
		display inline-block
		margin 7px
		padding 8px
		padding-left 35px
		padding-right 15px
		font-size 18px
		color white
		box-shadow 1px 1px 12px rgba(100, 100, 100, 0.5)
		background-color #2980b9
		border 2px solid #2980b9
		background-repeat no-repeat
		background-position 9px 9px
		&[state=false]
			background-color mainColor
			border 2px solid mainColor
		&:hover
			border 2px solid white
			transition all 200ms ease
			box-shadow 1px 1px 12px rgba(100, 100, 100, 0.5)
	#content h1
		font-family: 'Roboto'
		font-size: 26px